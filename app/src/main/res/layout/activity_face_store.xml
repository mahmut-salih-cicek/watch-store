<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    tools:context=".View.Face_Store">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:cardCornerRadius="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black">

                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/store_icon"
                        android:layout_width="151dp"
                        android:layout_height="168dp"
                        android:background="@drawable/facee1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                    </ImageView>


                    <TextView
                        android:id="@+id/store_Title"
                        android:layout_width="198dp"
                        android:layout_height="48dp"
                        android:fontFamily="@font/gotham_bold"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="Community Face"
                        android:textColor="@color/white"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.434"
                        app:layout_constraintStart_toEndOf="@+id/store_icon"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.079">

                    </TextView>

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gotham_narrow_bold"
                        android:text="Weather,Battery,Clock,Battery Temp"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.434"
                        app:layout_constraintStart_toEndOf="@+id/store_icon"
                        app:layout_constraintTop_toBottomOf="@+id/store_Title"
                        app:layout_constraintVertical_bias="0.064">

                    </TextView>


                    <TextView
                        android:id="@+id/price"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/shape4"
                        android:fontFamily="@font/gotham_bold"
                        android:gravity="center"
                        android:text="8$"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="italic"
                        app:layout_constraintBottom_toTopOf="@+id/button_satın_Al"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.127"
                        app:layout_constraintStart_toEndOf="@+id/store_icon"
                        app:layout_constraintTop_toBottomOf="@+id/textView4"
                        app:layout_constraintVertical_bias="0.8">

                    </TextView>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button_satın_Al"
                        android:layout_width="135dp"
                        android:layout_height="48dp"
                        android:background="@drawable/store_shape"
                        android:backgroundTint="#FFFFFF"
                        android:onClick="satınal"
                        android:text="Buy"
                        android:textColor="#000000"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/store_icon"
                        app:layout_constraintVertical_bias="0.529"></androidx.appcompat.widget.AppCompatButton>


                    <TextView
                        android:visibility="gone"
                        android:id="@+id/purchase_status1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gotham_bold"
                        android:text="Purchase Status"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/price"
                        app:layout_constraintVertical_bias="0.406"></TextView>


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>





            <androidx.cardview.widget.CardView
                android:layout_marginTop="10dp"
                android:id="@+id/cardView3"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:cardCornerRadius="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black">

                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/store_icon1"
                        android:layout_width="151dp"
                        android:layout_height="168dp"
                        android:background="@drawable/face2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                    </ImageView>


                    <TextView
                        android:id="@+id/store_Title1"
                        android:layout_width="198dp"
                        android:layout_height="48dp"
                        android:fontFamily="@font/gotham_bold"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="Remote Face"
                        android:textColor="@color/white"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.434"
                        app:layout_constraintStart_toEndOf="@+id/store_icon1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.079">

                    </TextView>

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gotham_narrow_bold"
                        android:text="Battery,Clock,Calendar"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.434"
                        app:layout_constraintStart_toEndOf="@+id/store_icon1"
                        app:layout_constraintTop_toBottomOf="@+id/store_Title1"
                        app:layout_constraintVertical_bias="0.064">

                    </TextView>


                    <TextView
                        android:id="@+id/price1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/shape4"
                        android:fontFamily="@font/gotham_bold"
                        android:gravity="center"
                        android:text="5$"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="italic"
                        app:layout_constraintBottom_toTopOf="@+id/button_satın_Al1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.127"
                        app:layout_constraintStart_toEndOf="@+id/store_icon1"
                        app:layout_constraintTop_toBottomOf="@+id/textView5"
                        app:layout_constraintVertical_bias="0.8">

                    </TextView>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button_satın_Al1"
                        android:layout_width="135dp"
                        android:layout_height="48dp"
                        android:background="@drawable/store_shape"
                        android:backgroundTint="#FFFFFF"
                        android:onClick="button_satın_Al1"
                        android:text="Buy"
                        android:textColor="#000000"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/store_icon1"
                        app:layout_constraintVertical_bias="0.529"></androidx.appcompat.widget.AppCompatButton>


                    <TextView
                        android:id="@+id/purchase_status2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gotham_bold"
                        android:text="Purchase Status"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/price1"
                        app:layout_constraintVertical_bias="0.406"></TextView>


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>




            <androidx.cardview.widget.CardView
                android:visibility="visible"
                android:layout_marginTop="10dp"
                android:id="@+id/cardView4"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:cardCornerRadius="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black">

                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/store_icon2"
                        android:layout_width="151dp"
                        android:layout_height="168dp"
                        android:background="@drawable/face3"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                    </ImageView>


                    <TextView
                        android:id="@+id/store_Title2"
                        android:layout_width="198dp"
                        android:layout_height="48dp"
                        android:fontFamily="@font/gotham_bold"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="Counter Face"
                        android:textColor="@color/white"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.434"
                        app:layout_constraintStart_toEndOf="@+id/store_icon2"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.079">

                    </TextView>

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gotham_narrow_bold"
                        android:text="Step Counter,Battery,Kcal Calculator"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.434"
                        app:layout_constraintStart_toEndOf="@+id/store_icon2"
                        app:layout_constraintTop_toBottomOf="@+id/store_Title2"
                        app:layout_constraintVertical_bias="0.064">

                    </TextView>


                    <TextView
                        android:id="@+id/price2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/shape4"
                        android:fontFamily="@font/gotham_bold"
                        android:gravity="center"
                        android:text="8$"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="italic"
                        app:layout_constraintBottom_toTopOf="@+id/button_satın_Al2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.127"
                        app:layout_constraintStart_toEndOf="@+id/store_icon2"
                        app:layout_constraintTop_toBottomOf="@+id/textView6"
                        app:layout_constraintVertical_bias="0.8">

                    </TextView>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button_satın_Al2"
                        android:layout_width="135dp"
                        android:layout_height="48dp"
                        android:background="@drawable/store_shape"
                        android:backgroundTint="#FFFFFF"
                        android:onClick="button_satın_Al2"
                        android:text="Buy"
                        android:textColor="#000000"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/store_icon2"
                        app:layout_constraintVertical_bias="0.529"></androidx.appcompat.widget.AppCompatButton>


                    <TextView
                        android:id="@+id/purchase_status3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/gotham_bold"
                        android:text="Purchase Status"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/price2"
                        app:layout_constraintVertical_bias="0.406"></TextView>


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>




        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>