<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141C3D"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.MainFragment">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <!-- Set content -->


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <GridLayout
                    android:id="@+id/gridLayout2"
                    android:layout_width="362dp"
                    android:layout_height="330dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginEnd="20dp"
                    android:columnCount="3"
                    android:rowCount="3"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/weather_loction_button"
                        android:layout_width="165dp"
                        android:layout_height="80dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:background="@drawable/ripple"
                        android:drawableLeft="@drawable/ic_baseline_explore_24"
                        android:drawablePadding="0dp"
                        android:padding="3dp"
                        android:text="Weather\nLocation"
                        android:textColor="@color/white">

                    </androidx.appcompat.widget.AppCompatButton>


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/watch_face_button"
                        android:layout_width="165dp"
                        android:layout_height="80dp"
                        android:layout_row="0"
                        android:layout_column="2"
                        android:background="@drawable/ripple2"
                        android:drawableLeft="@drawable/ic_baseline_watch_24"
                        android:drawablePadding="0dp"
                        android:padding="3dp"
                        android:text="Watch\nFace"
                        android:textColor="@color/white">

                    </androidx.appcompat.widget.AppCompatButton>


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/buy_face_button"
                        android:layout_width="165dp"
                        android:layout_height="80dp"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/ripple3"
                        android:drawableLeft="@drawable/ic_baseline_widgets_24"
                        android:drawablePadding="0dp"
                        android:padding="3dp"
                        android:text="Buy\nFace"
                        android:textColor="@color/white">

                    </androidx.appcompat.widget.AppCompatButton>


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/color_settings_button"
                        android:layout_width="165dp"
                        android:layout_height="80dp"
                        android:layout_row="1"
                        android:layout_column="2"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/ripple4"
                        android:drawableLeft="@drawable/ic_baseline_color_lens_24"
                        android:drawablePadding="0dp"
                        android:padding="3dp"
                        android:text="Color\nSettÄ±ngs"
                        android:textColor="@color/white">

                    </androidx.appcompat.widget.AppCompatButton>


                </GridLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler"
                    android:layout_width="409dp"
                    android:layout_height="239dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.967" />


            </androidx.constraintlayout.widget.ConstraintLayout>



        </LinearLayout>



    </ScrollView>






</FrameLayout>